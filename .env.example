# Copy to .env and adjust values as needed

# ---------- PostgreSQL ----------
POSTGRES_USER=app
POSTGRES_PASSWORD=app_password
POSTGRES_DB=app_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Unified database URL (used by many ORMs / libs: Prisma, Sequelize, Knex...)
DATABASE_URL=postgresql://app:app_password@db:5432/app_db

# ---------- Frontend / Backend communication ----------
# Exposed to Vite (must start with VITE_)
VITE_BACKEND_URL=http://backend:3000

# Example public variable for Next.js (exposed to browser if prefixed NEXT_PUBLIC_)
NEXT_PUBLIC_API_BASE=http://backend:3000

# Optional Node environment
NODE_ENV=development

# (Create a real .env by copying this file: cp .env.example .env)
